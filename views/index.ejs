  <!-- ======= Header ======= -->
  <header id="header">
    <div class="container d-flex">

      <div class="logo mr-auto">
        <h1 class="text-light"><a href="/"><img src="img/Logo_white.png" alt=""> ShinyDexTracker</a></h1> 
      </div>

      <nav class="nav-menu d-none d-lg-block ">
        <ul>
          <li class="active"><a href="/"><i class="fas fa-home"></i> Home</a></li>
          <li><a href="/#about"><i class="fab fa-ethereum"></i> About Us</a></li>
          <li><a href="/#recentShinies"><i class="fas fa-star"></i> Recent Shinies</a></li>
          <li><a href="/#socials"><i class="fas fa-comment"></i> Socials</a></li>
          <% if(isLoged === true){ %> 
            <li><a href="/profile/<%= userName %>"><i class="fas fa-user-circle"></i> Profile</a></li>
          <% }%> 
          <li class="drop-down"><a href=""><i class="fas fa-tools"></i> Tools</a>
            
            <ul>
              <li><a href="counter"><i class="fas fa-calculator"></i> Counter</a></li>
              <li><a href="faq"><i class="fas fa-question-circle"></i> F.A.Q</a></li>
              <li><a href="https://shinybot.dev/"><i class="fas fa-robot"></i> ShinyBot</a></li>
            </ul>
            <% if(isLoged === false){ %> 
              <li><a href="login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
            <% }else{  %> 
              <li><a href="logout"><i class="fas fa-sign-in-alt"></i> Logout</a></li>
              <% } %> 
          </li>
        </ul>
      </nav>
      <!-- .nav-menu -->

    </div>
  </header>
  <!-- End Header -->

  <!-- ======= Hero Section ======= -->


  <section id="hero">
    
    <div class="hero-container" data-aos="fade-up">
      <h1>ShinyDexTracker</h1>
      <h2>The Best Way to Manage and Keep track of your Shiny Pokémon</h2>
      <a href="#about" class="btn-get-started scrollto">Continue</a>
    </div>
  </section><!-- End Hero -->

  <main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
      <div class="container">

        <div class="row">
          <div class="col-xl-6 col-lg-6 video-box d-flex justify-content-center align-items-stretch" data-aos="zoom-in">
          </div>

          <div class="col-xl-6 col-lg-6 d-flex flex-column align-items-stretch justify-content-center py-5 px-lg-5">
            <div class="box-heading" data-aos="fade-up">
              <h4>About us</h4>
              <h3>Collect, Organize and Show off your Sparkly Collection!</h3>
              <p>This Website is meant for every type of shiny hunter, inexperienced ones or veterans. <strong>Join the hunt to show off your collection</strong></p>

            </div>

          </div>
        </div>

      </div>
    </section><!-- End About Section -->

    <!-- ======= recentShinies Section ======= -->
    <section id="recentShinies" class="recentShinies">
      <div class="container">

        <div class="section-title" data-aos="zoom-in">
              <h3 class="recent-shiny-h3">Recently Caught<span> Shinies</span></h3>
          
        </div>

        <div class="row recentShinies-container" data-aos="fade-up" data-aos-delay="100">
            <%  for(let s of AlexShinies){ %> 
              <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12   recentShinies-item filter-app">
                <div class="recentShinyDiv">
                  <img src="img/shinies/<%= s.pokemon_name  %>.gif" class="img-fluid recentShinyImg" alt="">
                  <div class="recentShinies-info">
                    
                    <h4 class="PokemonNAME"><%= s.pokemon_name %>  
                    
                      <% if(s.gender === "Male"){%>
                        <span class="genderSPAN" style="color: #4c80d8">(M)</span>
                        <% }else if(s.gender === "Female"){%>
                          <span class="genderSPAN" style="color: #d84c66">(F)</span>
                          <% }else{%> 
                            <span class="genderSPAN" style="color: #614cd8">(G)</span>
                            <% } %> 
                            
                            <% if(!s.pokemon_nickname){%>
                              <p class="PokemonNickname"> ‎</p>
                              <% }else{%>
                                <p class="PokemonNickname"><%= s.pokemon_nickname%></p>
                                <% } %> </h4>  
                      <hr class="recentShinyHR">
                    <p class="justifyTxt"><b>Encounters:</b> <span style="color :#b492ff "><%= s.encounters %> </span></p>
                    <p class="justifyTxt"><b>Method:</b><span style="color :#b492ff "> <%= s.method%> </span></p>
                    <p class="justifyTxt"><b>Caught By: </b><a class="profileA" href="profile/<%= s.trainer_name%>"><%= s.trainer_name%></a></p> 
                    <p class="justifyTxt"><b>Caught Date:</b> <span style="color :#b492ff "><%= s.caught_date.toDateString()%></span></p>
                    <br>
                    <p></p>
                </div>
                </div>
              </div>
              <% }%> 
         

          

        </div>

      </div>
    </section>
    <!-- End recentShinies Section -->

    <!-- ======= Start Socials ======= -->
    <section id="socials" class="about">
      <div class="container">

        <div class="row">
          <div class="col-xl-6 col-lg-6 video-box2 d-flex justify-content-center align-items-stretch" data-aos="zoom-in">
          </div>
          
          <div class="col-xl-6 col-lg-6 d-flex flex-column align-items-stretch justify-content-center py-5 px-lg-5">
            <div class="box-heading" data-aos="fade-up">
              <h4>Socials</h4>
              <h3>Interact with Fellow Shiny Hunters from around the Globe!</h3>
              <p>Make sure to follow our <strong>Socials</strong> to keep in touch with future updates and news!</p>
            </div>

            <div class="icon-box" data-aos="fade-up">
              <div class="icon"><i class="fab fa-discord"></i></div>
              <h4 class="title"><a href="">Discord</a></h4>
              <p class="description">Join our <strong>Discord</strong> Community and interact with others!</p>
            </div>

            <div class="icon-box" data-aos="fade-up" data-aos-delay="100">
              <div class="icon"><i class="fab fa-twitter-square"></i></div>
              <h4 class="title"><a href="https://twitter.com/VioletAlex_">Twitter</a></h4>
              <p class="description">Follow us on <strong>Twitter</strong> for future updates and news! </p>
            </div>

            <div class="icon-box" data-aos="fade-up" data-aos-delay="200">
              <div class="icon"><i class="fab fa-twitch"></i></div>
              <h4 class="title"><a href="https://www.twitch.tv/violetalex">Twitch</a></h4>
              <p class="description">Watch some Livestreams or VODs on <strong>Twitch</strong> while you Shinyhunt.</p>
            </div>

          </div>
        </div>

      </div>
    </section>
