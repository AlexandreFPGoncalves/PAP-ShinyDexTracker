  </header>
  <!-- End Header -->

  
    <section id="profile" class="profile">
      <div class="container">

        

        <div class="section-title" data-aos="zoom-in">
          <h3 class="profile-h3"> <%= dadosUser.username %>'s   <span> Shinies</span></h3>
          <br>
          <div class="profileBTNS"> 
            <% if(userName === sessionUsername ){ %> 
              <a class="profileAtag" href="/profile/<%= dadosUser.username %>/addShiny"><i class="fas fa-plus-circle"></i> Add Shiny</a>
              <% }else{}%> 
            

            
          </div>
        </div>

        <div class="row profile-container" data-aos="fade-up" data-aos-delay="100">

          <br>

          <%  for(let s of userShinies){ %>
            <div class="col-lg-3 col-md-3 profile-item filter-app">
            <div class="profileDiv">
              
              
              <br>
              <img src="../img/shinies/<%= s.pokemon_name  %>.gif " class="img-fluid recentShinyImg" alt="">
              

              <div class="profile-info">
                
                <h4 class="PokemonNAME"><%= s.pokemon_name %> 
                  
                  <% if(s.gender === "Male"){%>
                    <span class="genderSPAN" style="color: #4c80d8">(M)</span>
                    <% }else if(s.gender === "Female"){%>
                      <span class="genderSPAN" style="color: #d84c66">(F)</span>
                      <% }else{%> 
                        <span class="genderSPAN" style="color: #614cd8">(G)</span>
                        <% } %> </h4> 
                  
                  
                        <% if(!s.pokemon_nickname){%>
                          <p class="PokemonNickname"> ‎</p>
                          <% }else{%>
                            <p class="PokemonNickname"><%= s.pokemon_nickname%></p>
                            <% } %> 
                  <img class="pokeballIMG" src="../img/pokemonIcons/<%= s.pokeball %>.png" alt="">
                  <% if(s.shiny_charm === true){%>
                  <img style="width: 30px; height: auto; padding-bottom: 3px;" src="../img/pokemonIcons/shinycharm.png" alt="">
                  <%}else{%>
                    <img style="width: 30px; height: auto; padding-bottom: 3px;" src="../img/pokemonIcons/noshinycharm.png" alt="">
                    <% } %>

                  <hr class="recentShinyHR">
                <p class="justifyTxt"><b> Encounters:</b><span style="color :#b492ff "> <%= s.encounters%></span></p>

      
                <p class="justifyTxt"><b>Game Caught:</b><span style="color :#b492ff "> <%= s.caught_game%> </span></p>    
                <p class="justifyTxt"><b> Method:</b> <span style="color :#b492ff "> <%= s.method%></span></p>
                <p class="justifyTxt"><b>Caught on:</b><span style="color :#b492ff "> <%= s.caught_date.toDateString()%> </span></p>
        
                <% if(userName === sessionUsername ){ %> 
                
                  <form action="/profile/<%= dadosUser.username %>/<%= s._id %>/editShiny" action="GET">
                    <button class="editdelbtn"><i class="far fa-edit"></i></button>
                  </form>
                  <form action="/profile/<%= dadosUser.username %>/<%= s._id %>?_method=DELETE" method="POST">
                    <button class="editdelbtn"><i class="far fa-trash-alt"></i></button>
                  </form>
                
                <% }else{}%> 
            </div>
            </div>
          </div>
          
            <% } %> 
            

          

          

        </div>

      </div>
    </section>

    


